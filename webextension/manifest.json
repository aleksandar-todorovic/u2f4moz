{
  "manifest_version": 2,
  "name": "U2F for firefox",
  "version": "1.0",
  "description": "Adds U2F support to firefox.",
  "icons": {
    "48": "icons/icon48.png",
    "64": "icons/icon64.png"
  },
  "applications": {
    "gecko": {
      "id": "u2f4moz@prefiks.org",
      "strict_min_version": "50.0"
    }
  },
  "permissions": [
    "nativeMessaging",
    "notifications"
  ],
  "background": {
    "scripts": ["main.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "run_at": "document_start",
      "js": ["content-script.js"]
    }
  ]
}